#!/bin/bash

# =================================================================
# 代理快捷指令管理脚本 (Proxy Alias Manager)
# 功能：一键配置 setproxy/unsetproxy/myip 别名
# =================================================================

# 颜色定义
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m'

# 标记定义
START_MARKER="# ================= Proxy Settings (Auto-Generated) ================="
END_MARKER="# ================================================================="

# 自动检测 Shell 配置文件
if [[ "$SHELL" == *"zsh"* ]]; then
    CONFIG_FILE="$HOME/.zshrc"
elif [[ -f "$HOME/.bashrc" ]]; then
    CONFIG_FILE="$HOME/.bashrc"
else
    CONFIG_FILE="$HOME/.profile"
fi

# ==================== 函数定义区域 ====================

# 函数: 卸载配置
function uninstall_proxy() {
    echo -e "${YELLOW}正在检测配置文件: $CONFIG_FILE ...${NC}"
    
    if grep -qF "$START_MARKER" "$CONFIG_FILE"; then
        # 备份
        cp "$CONFIG_FILE" "${CONFIG_FILE}.bak_uninstall"
        echo -e "已备份原配置至: ${CONFIG_FILE}.bak_uninstall"
        
        # 删除配置块
        if [[ "$OSTYPE" == "darwin"* ]]; then
            sed -i '' "/$START_MARKER/,/$END_MARKER/d" "$CONFIG_FILE"
        else
            sed -i "/$START_MARKER/,/$END_MARKER/d" "$CONFIG_FILE"
        fi
        
        echo -e "${GREEN}✅ 卸载成功！代理配置已移除。${NC}"
        echo -e "${YELLOW}👉 请执行 [ source $CONFIG_FILE ] 以刷新当前终端。${NC}"
    else
        echo -e "${RED}❌ 未发现代理配置，无需卸载。${NC}"
    fi
}

# 函数: 安装配置
function install_proxy() {
    local IN_IP=$1
    local IN_PORT=$2

    # 如果没有传参，则交互输入 (注意 < /dev/tty)
    if [[ -z "$IN_IP" ]]; then
        echo ""
        read -p "请输入代理服务器 IP (默认 127.0.0.1): " input_ip < /dev/tty
        IN_IP=${input_ip:-127.0.0.1}
    fi

    if [[ -z "$IN_PORT" ]]; then
        read -p "请输入代理端口 (默认 7890): " input_port < /dev/tty
        IN_PORT=${input_port:-7890}
    fi

    echo -e "即将设置代理: ${GREEN}${IN_IP}:${IN_PORT}${NC}"

    # 清理旧配置 (防止重复)
    if grep -qF "$START_MARKER" "$CONFIG_FILE"; then
        if [[ "$OSTYPE" == "darwin"* ]]; then
            sed -i '' "/$START_MARKER/,/$END_MARKER/d" "$CONFIG_FILE"
        else
            sed -i "/$START_MARKER/,/$END_MARKER/d" "$CONFIG_FILE"
        fi
    fi

    # 写入新配置
    cat >> "$CONFIG_FILE" <<EOF

$START_MARKER
# 代理地址变量
PROXY_HOST="$IN_IP"
PROXY_PORT="$IN_PORT"

# 开启代理
alias setproxy="export http_proxy=http://\$PROXY_HOST:\$PROXY_PORT && \\
                export https_proxy=http://\$PROXY_HOST:\$PROXY_PORT && \\
                export ftp_proxy=http://\$PROXY_HOST:\$PROXY_PORT && \\
                export all_proxy=http://\$PROXY_HOST:\$PROXY_PORT && \\
                echo -e '\033[32m[Proxy ON] 已开启代理 -> \$PROXY_HOST:\$PROXY_PORT\033[0m'"

# 关闭代理
alias unsetproxy="unset http_proxy https_proxy ftp_proxy all_proxy && \\
                  echo -e '\033[31m[Proxy OFF] 代理已关闭，恢复直连\033[0m'"

# 查看当前 IP
alias myip="curl -s --connect-timeout 5 ipinfo.io/ip"
$END_MARKER
EOF

    echo -e "${GREEN}✅ 配置写入成功！${NC}"
    echo ""
    echo -e "${YELLOW}!!! 安装完成，请执行以下命令立即生效 !!!${NC}"
    echo -e "${GREEN}source $CONFIG_FILE${NC}"
}

# ==================== 主逻辑区域 ====================

# 1. 检查是否有参数传入 (静默模式)
if [[ -n "$1" ]]; then
    if [[ "$1" == "uninstall" ]]; then
        uninstall_proxy
    else
        # 假设参数是 IP 和 端口
        install_proxy "$1" "$2"
    fi
    exit 0
fi

# 2. 如果没有参数，显示交互菜单
clear
echo -e "${CYAN}========================================${NC}"
echo -e "${GREEN}    代理快捷指令管理工具 (Proxy Manager)${NC}"
echo -e "${CYAN}========================================${NC}"
echo -e "当前配置文件: ${YELLOW}$CONFIG_FILE${NC}"
echo ""
echo -e "请选择操作："
echo -e "  ${GREEN}1.${NC} 安装/更新 代理配置 (Install/Update)"
echo -e "  ${RED}2.${NC} 卸载 代理配置 (Uninstall)"
echo -e "  ${CYAN}0.${NC} 退出 (Exit)"
echo ""
read -p "请输入选项 [1-2]: " choice < /dev/tty

case "$choice" in
    1)
        install_proxy
        ;;
    2)
        uninstall_proxy
        ;;
    0)
        echo "已退出。"
        exit 0
        ;;
    *)
        echo -e "${RED}无效选项，已退出。${NC}"
        exit 1
        ;;
esac
