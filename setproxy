#!/bin/bash

# =================================================================
# 代理快捷指令管理工具 (Proxy Alias Manager) - 修复版
# 
# 脚本功能：
#   1. 一键配置 setproxy / unsetproxy / myip 别名
#   2. 支持交互式菜单或静默参数模式
#   3. 安装/卸载后自动提示重载
#
# 使用方法:
#   交互菜单:  bash proxy.sh
#   静默安装:  bash proxy.sh 127.0.0.1 7890
#   静默卸载:  bash proxy.sh uninstall
# =================================================================

# --- 颜色定义 ---
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# --- 标记定义 ---
START_MARKER="# ================= Proxy Settings (Auto-Generated) ================="
END_MARKER="# ================================================================="

# --- 自动检测配置文件 ---
# 优先检测当前 Shell，其次检测文件是否存在
if [[ "$SHELL" == *"zsh"* ]]; then
    CONFIG_FILE="$HOME/.zshrc"
    CURRENT_SHELL="zsh"
elif [[ "$SHELL" == *"bash"* ]]; then
    if [[ -f "$HOME/.bashrc" ]]; then
        CONFIG_FILE="$HOME/.bashrc"
    else
        CONFIG_FILE="$HOME/.bash_profile"
    fi
    CURRENT_SHELL="bash"
else
    # 兜底 fallback
    CONFIG_FILE="$HOME/.profile"
    CURRENT_SHELL="bash"
fi

# ==================== 核心函数 ====================

# 辅助函数：提示用户重载环境
# 注意：直接使用 exec 可能会导致 SSH 断开或窗口关闭，改为提示用户手动 source 更安全
function reload_hint() {
    echo ""
    echo -e "${YELLOW}⚡ 配置已更新！${NC}"
    echo -e "请执行以下命令使配置立即生效："
    echo -e "${GREEN}    source $CONFIG_FILE${NC}"
    echo ""
}

# 函数：卸载配置
function uninstall_proxy() {
    echo -e "${YELLOW}🔍 正在检测配置文件: $CONFIG_FILE ...${NC}"
    
    if grep -qF "$START_MARKER" "$CONFIG_FILE"; then
        # 1. 备份原文件
        cp "$CONFIG_FILE" "${CONFIG_FILE}.bak_uninstall"
        echo -e "📦 已备份原配置至: ${CONFIG_FILE}.bak_uninstall"
        
        # 2. 删除配置块 (兼容 MacOS/Linux)
        if [[ "$OSTYPE" == "darwin"* ]]; then
            sed -i '' "/$START_MARKER/,/$END_MARKER/d" "$CONFIG_FILE"
        else
            sed -i "/$START_MARKER/,/$END_MARKER/d" "$CONFIG_FILE"
        fi
        
        echo -e "${GREEN}✅ 卸载成功！配置文件已清理。${NC}"
        
        # 3. 提示重载
        reload_hint
    else
        echo -e "${RED}❌ 未发现代理配置，无需卸载。${NC}"
    fi
}

# 函数：安装配置
function install_proxy() {
    local IN_IP=$1
    local IN_PORT=$2

    # 如果没有传参，则交互输入
    if [[ -z "$IN_IP" ]]; then
        echo ""
        # 尝试从 tty 读取，如果失败(如 curl | bash)则尝试默认 fd
        if [ -t 0 ]; then
             read -p "请输入代理服务器 IP (默认 127.0.0.1): " input_ip
        else
             read -p "请输入代理服务器 IP (默认 127.0.0.1): " input_ip < /dev/tty
        fi
        IN_IP=${input_ip:-127.0.0.1}
    fi

    if [[ -z "$IN_PORT" ]]; then
        if [ -t 0 ]; then
             read -p "请输入代理端口 (默认 7890): " input_port
        else
             read -p "请输入代理端口 (默认 7890): " input_port < /dev/tty
        fi
        IN_PORT=${input_port:-7890}
    fi

    echo -e "🚀 即将设置代理目标: ${GREEN}${IN_IP}:${IN_PORT}${NC}"

    # 1. 清理旧配置 (防止重复添加)
    if grep -qF "$START_MARKER" "$CONFIG_FILE"; then
        if [[ "$OSTYPE" == "darwin"* ]]; then
            sed -i '' "/$START_MARKER/,/$END_MARKER/d" "$CONFIG_FILE"
        else
            sed -i "/$START_MARKER/,/$END_MARKER/d" "$CONFIG_FILE"
        fi
    fi

    # 2. 写入新配置
    # 注意：下面的 EOF 必须不能有前置缩进，否则会报错
    cat >> "$CONFIG_FILE" <<EOF

$START_MARKER
# 代理地址变量
PROXY_HOST="$IN_IP"
PROXY_PORT="$IN_PORT"

# 开启代理 (HTTP/HTTPS/FTP/ALL)
alias setproxy="export http_proxy=http://\$PROXY_HOST:\$PROXY_PORT && \\
                export https_proxy=http://\$PROXY_HOST:\$PROXY_PORT && \\
                export ftp_proxy=http://\$PROXY_HOST:\$PROXY_PORT && \\
                export all_proxy=http://\$PROXY_HOST:\$PROXY_PORT && \\
                echo -e '\033[32m[Proxy ON] 已开启代理 -> \$PROXY_HOST:\$PROXY_PORT\033[0m'"

# 关闭代理 (清除所有变量)
alias unsetproxy="unset http_proxy https_proxy ftp_proxy all_proxy && \\
                  echo -e '\033[31m[Proxy OFF] 代理已关闭，恢复直连\033[0m'"

# 查看当前 IP (测试连接)
alias myip="curl -s --connect-timeout 5 ipinfo.io/ip"
$END_MARKER
EOF

    echo -e "${GREEN}✅ 配置写入成功！${NC}"
    
    # 3. 提示重载
    reload_hint
}

# ==================== 主逻辑 ====================

# 场景 1: 带参数运行 (静默模式)
if [[ -n "$1" ]]; then
    if [[ "$1" == "uninstall" ]]; then
        uninstall_proxy
    else
        install_proxy "$1" "$2"
    fi
    exit 0
fi

# 场景 2: 无参数运行 (交互菜单)
clear
echo -e "${CYAN}========================================${NC}"
echo -e "${GREEN}    代理快捷指令管理工具 (Proxy Manager)${NC}"
echo -e "${CYAN}========================================${NC}"
echo -e "当前 Shell: ${YELLOW}$CURRENT_SHELL${NC}"
echo -e "当前配置文件: ${YELLOW}$CONFIG_FILE${NC}"
echo ""
echo -e "请选择操作："
echo -e "  ${GREEN}1.${NC} 安装/更新 代理配置 (Install/Update)"
echo -e "  ${RED}2.${NC} 卸载 代理配置 (Uninstall)"
echo -e "  ${CYAN}0.${NC} 退出 (Exit)"
echo ""

# 兼容读取输入
if [ -t 0 ]; then
    read -p "请输入选项 [1-2]: " choice
else
    read -p "请输入选项 [1-2]: " choice < /dev/tty
fi

case "$choice" in
    1)
        install_proxy
        ;;
    2)
        uninstall_proxy
        ;;
    0)
        echo "已退出。"
        exit 0
        ;;
    *)
        echo -e "${RED}无效选项，已退出。${NC}"
        exit 1
        ;;
esac
